<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_menu_item"
    android:padding="@dimen/dp_14">

    <TextView
        android:id="@+id/tv_grade"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_marginEnd="@dimen/dp_10"
        android:background="@color/grey"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_class_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/tv_grade"
        android:paddingTop="@dimen/dp_05"
        android:text="@string/app_name"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:id="@+id/tv_is_class_teacher"
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_15"
        android:layout_alignBottom="@id/tv_grade"
        android:layout_toEndOf="@id/tv_grade"
        android:background="@drawable/selector_star"
        android:enabled="false" />

    <TextView
        android:id="@+id/tv_class_teacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_grade"
        android:layout_marginStart="@dimen/dp_05"
        android:layout_toEndOf="@id/tv_is_class_teacher"
        android:enabled="true"
        android:text="@string/app_name"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/tv_teacher_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_grade"
        android:layout_alignParentEnd="true"
        android:drawableStart="@mipmap/btn_phone"
        android:drawablePadding="@dimen/dp_05"
        android:enabled="true"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_14" />

</RelativeLayout>