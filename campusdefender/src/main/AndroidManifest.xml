<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.witaction.campusdefender">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/CommonAppTheme">
        <activity android:name=".ui.main.MainActivity"></activity>
        <!-- 登录页 -->
        <activity
            android:name=".ui.login.login.LoginActivity"
            android:launchMode="singleTask" /> <!-- 城市列表 -->
        <activity
            android:name=".ui.login.city.CityListActivity"
            android:launchMode="singleTask" /> <!-- 选择平台 -->
        <activity
            android:name=".ui.login.plat.PlatActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".ui.login.splash.SplashActivity"
            android:launchMode="singleTask"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>