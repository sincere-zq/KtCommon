<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.witaction.campusdefender">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/CommonAppTheme">
        <activity
            android:name=".ui.main.my.account.updatename.UpdateNameActivity"
            android:launchMode="singleTask" />
        <!-- 账号设置 -->
        <activity
            android:name=".ui.main.my.account.AccountSetActivity"
            android:launchMode="singleTask" /> <!-- 所有功能菜单页面 -->
        <activity
            android:name=".ui.main.home.editmenu.EditMenuActivity"
            android:launchMode="singleTask" /> <!-- 切换身份 -->
        <activity
            android:name=".ui.main.my.switchidentity.SwitchIdentityActivity"
            android:launchMode="singleTask" /> <!-- 首页 -->
        <activity
            android:name=".ui.main.MainActivity"
            android:launchMode="singleTask" /> <!-- 登录页 -->
        <activity
            android:name=".ui.login.login.LoginActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".ui.login.splash.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>